<!DOCTYPE html>
<html>
  <head>
    <title>CastleBnb</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <!-- Add these line for detecting device width -->
    <!-- Add these line for detecting device width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">


  </head>
  <body>

    <%= render 'shared/navbar_with_login' %>

    <div>
    <!-- add jquery method to put a dark background if these thigngs are called -->
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>


    <%= yield %>

    <script type="text/javascript"
    src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyAyKKo-R09TMMQe6J0G9JLEK_YIXETwg-Y"></script>

    <%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>

   
    <!-- Custom JS code to bind to Autocomplete API -->
    <script type="text/javascript" src="autocomplete.js"></script>
 
    <%= javascript_include_tag "application" %>

    <%= yield(:after_js) %>

  </body>
</html>
