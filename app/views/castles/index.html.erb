<p id="notice"><%= notice %></p>

<!-- Listing Castles -->
<div class=container >
  <div class=row>

    <div class="col-md-4" >
      <div class= "picture-frame" >
        <% @castles.each do |castle| %>
        <%= image_tag("castle2.jpg", class: "img-responsive") %>
        <p> <%= link_to castle.name, castle_path(castle) %> </p>
        <p>Distance: <%= castle.distance.round(1) %> km </p>
      <% end %>
    </div>
  </div>
    <div class="col-md-8" >
      <div id="map" style="width: 100%; height: 600px;"></div>
    </div>
</div>

  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).ready(function() {
        var coord = <%= raw @castle_coordinates %>;
        alert('Castle coordinates are ' + coord.latitude + ', ' + coord.longitude);
        <!-- above put in dynamic message -->
      });
    <% end %>
  <% end %>
  <%= @castle_coordinates %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>


</table>

  <% content_for(:after_js) do %>
    <%= javascript_tag do %>
      $(document).on('ready', function() {
        handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function(){
          markers = handler.addMarkers(<%= raw @markers.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
      })
    <% end %>
  <% end %>

